<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kiodev.kaknab.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/button_padding"
        android:layout_marginRight="@dimen/button_padding"
        android:layout_weight="1"
        android:onClick="onClickTulum"
        android:text="@string/tulum"
        tools:ignore="ButtonStyle,Buttons in button bars should be borderless" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/button_padding"
        android:layout_marginRight="@dimen/button_padding"
        android:layout_weight="1"
        android:onClick="onClickAkumal"
        android:text="@string/akumal"
        tools:ignore="ButtonStyle,Buttons in button bars should be borderless" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/button_padding"
        android:layout_marginRight="@dimen/button_padding"
        android:layout_weight="1"
        android:onClick="onClickXpuHa"
        android:text="@string/xpu_ha"
        tools:ignore="ButtonStyle,Buttons in button bars should be borderless" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="onClickXelHa"
        android:text="@string/xel_ha"
        tools:ignore="ButtonStyle,Buttons in button bars should be borderless" />
</LinearLayout>
